{
  "version": "2.0",
  "rules": [
    {
      "id": "cve-format",
      "description": "Mentions CVE without CVE-YYYY-NNNN pattern",
      "weight": 2.0,
      "type": "regex_any",
      "negate": false,
      "pattern": "CVE[^0-9]|CVE-\\d{4}-(?:\\d{1,3}|\\d{5,})"
    },
    {
      "id": "mitre-format",
      "description": "ATT&CK technique mentioned without valid T or TA pattern like T1059 or TA0001",
      "weight": 1.5,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\bATTACK\\b(?!.*\\bT\\d{4}\\b|\\bTA\\d{4}\\b)"
    },
    {
      "id": "source-free",
      "description": "No sources, links, or references present (credibility risk)",
      "weight": 2.5,
      "type": "regex_absent",
      "negate": false,
      "pattern": "(https?://|CISA|NIST|CERT|MSRC|Reuters|Bloomberg|Ars Technica)"
    },
    {
      "id": "unsupported-claim",
      "description": "Assertion made without evidence words such as 'based on', 'according to', or 'observed in data'",
      "weight": 2.2,
      "type": "regex_absent",
      "negate": false,
      "pattern": "(based on|according to|observed|data shows|analysis of)"
    },
    {
      "id": "hyperbole",
      "description": "Exaggerated or emotional terms undermining analytic tone",
      "weight": 1.8,
      "type": "regex_count",
      "negate": false,
      "threshold": 3,
      "pattern": "\\b(devastating|unprecedented|massive|catastrophic|military-grade|apocalyptic)\\b"
    },
    {
      "id": "unclear-scope",
      "description": "Ambiguous scope statements ('every', 'always', 'everyone')",
      "weight": 1.4,
      "type": "regex_count",
      "negate": false,
      "threshold": 4,
      "pattern": "\\b(always|never|everyone|everywhere|all|completely)\\b"
    },
    {
      "id": "circular-logic",
      "description": "Circular phrasing that repeats assertion without evidence",
      "weight": 2.0,
      "type": "llm_only",
      "negate": false
    },
    {
      "id": "hedging-no-evidence",
      "description": "Hedging language without data ('might', 'could', 'maybe') repeated more than threshold",
      "weight": 1.0,
      "type": "regex_count",
      "negate": false,
      "threshold": 6,
      "pattern": "\\b(might|maybe|could|possibly|it is believed|reportedly)\\b"
    },
    {
      "id": "tone-shift",
      "description": "Abrupt change from analytical to emotional or moralizing tone",
      "weight": 1.6,
      "type": "llm_only",
      "negate": false
    },
    {
      "id": "logic-break",
      "description": "Internal contradiction or impossible sequence (e.g., event after its effect)",
      "weight": 2.3,
      "type": "llm_only",
      "negate": false
    },
    {
      "id": "marketing-blend",
      "description": "Mixes analytic claims with sales or promotional language",
      "weight": 1.7,
      "type": "regex_count",
      "negate": false,
      "threshold": 3,
      "pattern": "\\b(next\\s*gen|AI-powered|groundbreaking|game\\s*changing|revolutionary)\\b"
    },
    {
      "id": "time-travel",
      "description": "References to impossible or future-dated events",
      "weight": 2.3,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\b20(3\\d|[4-9]\\d)\\b"
    },
    {
  "id": "vague-source",
  "description": "Mentions a report or authority without a concrete citation or URL",
  "weight": 1.6,
  "type": "regex_any",
  "negate": false,
  "pattern": "\\b(report|experts?\\s+say|officials?\\s+stated|intelligence\\s+assessment)\\b(?![^\\n]{0,120}(https?://|CISA|NIST|CERT|MSRC|DNI|ODNI|FBI))"
    },

    {
      "id": "llm-only-claims",
      "description": "Sweeping claims lacking any reference or quantifier",
      "weight": 2.6,
      "type": "llm_only",
      "negate": false
    }
  ],
  "score": {
    "llm_weight": 0.45,
    "rules_weight": 0.55,
    "slop_threshold": 0.6
  }
}
