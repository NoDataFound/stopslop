{
  "version": "1.0",
  "rules": [
    {
      "id": "cve-format",
      "description": "Mentions CVE without CVE-YYYY-NNNN pattern",
      "weight": 2.0,
      "type": "regex_any",
      "negate": false,
      "pattern": "CVE[^0-9]|CVE-\\d{4}-(?:\\d{1,3}|\\d{5,})"
    },
    {
      "id": "mitre-format",
      "description": "ATTACK technique mentioned without valid T or TA pattern like T1059 or TA0001",
      "weight": 1.5,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\bATTACK\\b(?!.*\\bT\\d{4}\\b|\\bTA\\d{4}\\b)"
    },
    {
      "id": "hash-length",
      "description": "Suspicious hash lengths eg 30, 33, 50 which do not match MD5 SHA1 SHA256",
      "weight": 1.8,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\b[a-fA-F0-9]{30}\\b|\\b[a-fA-F0-9]{33}\\b|\\b[a-fA-F0-9]{50}\\b"
    },
    {
      "id": "ioc-format",
      "description": "IOC formatting broken eg IP octets out of range",
      "weight": 2.2,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\b(25[6-9]|2[6-9]\\d|[3-9]\\d{2,})\\.(\\d{1,3})\\.(\\d{1,3})\\.(\\d{1,3})\\b"
    },
    {
      "id": "source-free",
      "description": "No sources, links, or references present",
      "weight": 2.5,
      "type": "regex_absent",
      "negate": false,
      "pattern": "(https?://|doi:|arxiv|CISA|NIST|MSRC|CERT)"
    },
    {
      "id": "excess-hedging",
      "description": "Excessive hedging language without specifics",
      "weight": 1.0,
      "type": "regex_count",
      "negate": false,
      "threshold": 6,
      "pattern": "\\b(might|maybe|could|possibly|it is believed|reportedly)\\b"
    },
    {
      "id": "vendor-hype",
      "description": "Heavy marketing adjectives in analytic context",
      "weight": 1.2,
      "type": "regex_count",
      "negate": false,
      "threshold": 8,
      "pattern": "\\b(next\\s*gen|groundbreaking|unparalleled|revolutionary|game\\s*changing)\\b"
    },
    {
      "id": "time-travel",
      "description": "Impossible dates eg references to future breach confirmation",
      "weight": 2.3,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\b20(3\\d|[4-9]\\d)\\b"
    },
    {
      "id": "onion-misuse",
      "description": "Tor onion addresses malformed",
      "weight": 1.4,
      "type": "regex_any",
      "negate": false,
      "pattern": "\\b[a-z2-7]{10,15}\\.onion\\b"
    },
    {
      "id": "llm-only-claims",
      "description": "Grand claims with no evidence eg zero day declared without IOC or POC",
      "weight": 2.6,
      "type": "llm_only",
      "negate": false
    }
  ],
  "score": {
    "llm_weight": 0.45,
    "rules_weight": 0.55,
    "slop_threshold": 0.6
  }
}
